int numBitsSet ( int number )
{
	int setBitsCount = 0;

	while (number != 0){
		if (1 & number){
			setBitsCount++;
		}
		number = number >> 1;
	}
	return setBitsCount;
}

int main (void){

	int setBitsCount = numBitsSet(3);
	printf("setBitsCount = %d", setBitsCount);

	/*
	int a = 1;
	int b = 7;
