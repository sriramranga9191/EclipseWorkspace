void foo1(char **p){
	++*p;
}

void foo2(char **p){
	*p += 1;
}

int main (void){
	char *s = "abcd";
	char *a = s;
	printf("%s\n", a); //abcd
	foo1(&a);
	printf("%s\n", a); //abcd

	/*
	char *a = s;
	foo2(&a);
	printf("%s", a); //bcd
	*/
	return 0;
}
